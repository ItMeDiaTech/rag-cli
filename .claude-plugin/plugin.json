{
  "name": "rag-cli",
  "version": "2.0.0",
  "description": "Local RAG system with embedded Multi-Agent Framework for Claude Code plugin",
  "author": {
    "name": "DiaTech",
    "email": "support@rag-cli.dev",
    "url": "https://github.com/ItMeDiaTech/rag-cli"
  },
  "license": "MIT",
  "repository": "https://github.com/ItMeDiaTech/rag-cli.git",
  "homepage": "https://github.com/ItMeDiaTech/rag-cli",
  "keywords": [
    "rag",
    "retrieval",
    "augmented-generation",
    "vector-search",
    "semantic-search",
    "multi-agent",
    "orchestration",
    "documentation",
    "knowledge-base",
    "claude-code",
    "plugin"
  ],
  "commands": "./src/rag_cli_plugin/commands",
  "hooks": "./.claude-plugin/hooks.json",
  "skills": "./src/rag_cli_plugin/skills",
  "mcpServers": {
    "rag-cli": {
      "command": "python",
      "args": [
        "-m",
        "rag_cli_plugin.mcp.unified_server"
      ],
      "env": {
        "PYTHONUNBUFFERED": "1",
        "RAG_CLI_MODE": "claude_code",
        "RAG_CLI_ROOT": "${CLAUDE_PLUGIN_ROOT}",
        "PYTHONPATH": "${CLAUDE_PLUGIN_ROOT}:${CLAUDE_PLUGIN_ROOT}/src"
      },
      "alwaysAllowTrust": false,
      "features": {
        "autoStart": true,
        "retryOnFailure": true,
        "maxRetries": 3,
        "retryDelayMs": 1000
      }
    }
  }
}

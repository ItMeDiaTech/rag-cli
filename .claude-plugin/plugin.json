{
  "name": "rag-cli",
  "version": "1.2.0",
  "description": "Local RAG (Retrieval-Augmented Generation) system with embedded 7-agent framework for parallel execution. Enhances Claude Code with knowledge retrieval, code analysis, and multi-agent orchestration.",
  "author": {
    "name": "DiaTech",
    "email": "support@rag-cli.dev",
    "url": "https://github.com/ItMeDiaTech"
  },
  "homepage": "https://github.com/ItMeDiaTech/rag-cli",
  "repository": "https://github.com/ItMeDiaTech/rag-cli",
  "license": "MIT",
  "keywords": [
    "rag",
    "retrieval",
    "augmented-generation",
    "vector-search",
    "semantic-search",
    "multi-agent",
    "orchestration",
    "documentation",
    "knowledge-base",
    "faiss",
    "embeddings",
    "claude-code",
    "plugin"
  ],
  "commands": [
    "./src/plugin/commands/"
  ],
  "hooks": "./.claude-plugin/hooks.json",
  "mcpServers": {
    "rag-server": {
      "command": "python",
      "args": ["-m", "plugin.mcp.unified_server"],
      "env": {
        "PYTHONUNBUFFERED": "1",
        "RAG_CLI_MODE": "claude_code",
        "PYTHONPATH": "${CLAUDE_PLUGIN_ROOT}",
        "RAG_CLI_ROOT": "${CLAUDE_PLUGIN_ROOT}"
      }
    }
  }
}

{
  "name": "rag-cli",
  "version": "1.0.0",
  "description": "Local RAG (Retrieval-Augmented Generation) system for enhanced Claude Code responses with multi-agent orchestration",
  "author": {
    "name": "DiaTech",
    "email": "support@rag-cli.dev",
    "url": "https://github.com/ItMeDiaTech"
  },
  "homepage": "https://github.com/ItMeDiaTech/rag-cli",
  "repository": "https://github.com/ItMeDiaTech/rag-cli",
  "license": "MIT",
  "keywords": [
    "rag",
    "retrieval",
    "augmented-generation",
    "vector-search",
    "semantic-search",
    "multi-agent",
    "orchestration",
    "documentation",
    "knowledge-base",
    "faiss",
    "embeddings",
    "claude-code",
    "plugin"
  ],
  "commands": [
    "./src/plugin/commands/"
  ],
  "hooks": {
    "UserPromptSubmit": "./src/plugin/hooks/user-prompt-submit.py",
    "ResponsePost": "./src/plugin/hooks/response-post.py",
    "ErrorHandler": "./src/plugin/hooks/error-handler.py",
    "PluginStateChange": "./src/plugin/hooks/plugin-state-change.py",
    "DocumentIndexing": "./src/plugin/hooks/document-indexing.py"
  },
  "mcpServers": {
    "rag-server": {
      "command": "python",
      "args": ["-m", "src.plugin.mcp.unified_server"],
      "env": {
        "PYTHONUNBUFFERED": "1",
        "RAG_CLI_MODE": "claude_code"
      }
    }
  }
}

{
  "name": "rag-cli",
  "description": "RAG-CLI Retrieval-Augmented Generation Service",
  "version": "1.2.0",
  "type": "stdio",
  "command": "python",
  "args": [
    "-m",
    "src.plugin.mcp.unified_server"
  ],
  "env": {
    "PYTHONUNBUFFERED": "1",
    "RAG_CLI_MODE": "claude_code",
    "RAG_CLI_ROOT": "${CLAUDE_PLUGIN_ROOT}"
  },
  "alwaysAllowTrust": false,
  "features": {
    "autoStart": true,
    "retryOnFailure": true,
    "maxRetries": 3,
    "retryDelayMs": 1000
  }
}

{
  "enabled": false,
  "watch_directories": [],
  "file_patterns": [
    "**/*.md",
    "**/*.txt",
    "**/*.pdf",
    "**/*.docx",
    "**/*.html"
  ],
  "exclude_patterns": [
    "**/node_modules/**",
    "**/.git/**",
    "**/__pycache__/**",
    "**/venv/**",
    "**/dist/**",
    "**/build/**"
  ],
  "debounce_ms": 2000,
  "batch_size": 50,
  "auto_save_interval_minutes": 5,
  "index_on_startup": false,
  "recursive": true
}
